<Window x:Class="SeaBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattle"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="450" 
        Width="800"
        MinWidth="{Binding MinWidth}" 
        MinHeight="{Binding MinHeight}" 
        Icon="View/Images/anchor.png"
        >

    <Window.DataContext>
        <local:SampleDataContext/>
    </Window.DataContext>
    
    <Border Background="{StaticResource MainWindowBackgroundColorBrush}"
            Padding="5">
        <Frame x:Name="MainFrame" Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}"/>
    </Border>

</Window>
