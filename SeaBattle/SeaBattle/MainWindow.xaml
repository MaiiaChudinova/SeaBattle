<Window x:Class="SeaBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattle"
        mc:Ignorable="d"
        Title="Welcome to the Seabattle!" Height="450" Width="800"
        Icon="View/Images/anchor.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock FontSize="{StaticResource FontSizeLarge}"
                   Foreground="{StaticResource DarkBrush}"
                   FontFamily="{StaticResource VinqueRegular}">
            Welcome to the Seabattle!
        </TextBlock>
        <TextBlock Grid.Row="1"
                   FontSize="{StaticResource FontSizeLarge}"
                   Foreground="{StaticResource DarkBrush}">
            Welcome to the Seabattle!
        </TextBlock>
    </Grid>
</Window>
