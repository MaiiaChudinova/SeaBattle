<UserControl x:Class="SeaBattle.ShipUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeaBattle"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="350">

    <StackPanel Width="{Binding MaxShipWidth}"
                Height="{Binding CellSize}"
                Orientation="Horizontal">

        <Button Width="{Binding CellSize}"
                Height="{Binding CellSize}"
                Style="{StaticResource FieldCellButton}"/>


        <Button Width="{Binding CellSize}"
                Height="{Binding CellSize}"
                Style="{StaticResource FieldCellButton}"/>


        <Button Width="{Binding CellSize}"
                Height="{Binding CellSize}"
                Style="{StaticResource FieldCellButton}"/>


        <Button Width="{Binding CellSize}"
                Height="{Binding CellSize}"
                Style="{StaticResource FieldCellButton}"/>

    </StackPanel>
    
</UserControl>
