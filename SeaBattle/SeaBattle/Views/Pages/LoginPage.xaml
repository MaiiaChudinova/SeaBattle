<Page x:Class="SeaBattle.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SeaBattle.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding LoginPageViewModel, Source={StaticResource ViewModelLocator}}"
      Title="LoginPage">

    <StackPanel Background="White">
        <TextBlock HorizontalAlignment="Center" Text="Hello, I'm a login page!" />
        <Button Command="{Binding ChangePage}" Content="Go to welcome page" />

        <!--
        <TextBox Text="{Binding LogText, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" />
        <Button Command="{Binding SendLog}" Content="Send log" />
        -->
    </StackPanel>
</Page>
