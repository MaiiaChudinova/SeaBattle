<Window x:Class="SeaBattle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeaBattle"
        mc:Ignorable="d"
        Title="Seabattle v1.0" Height="450" Width="800"
        MinWidth="760" 
        MinHeight="500" 
        Icon="View/Images/anchor.png">
        <!-- MinWidth and MinHeight 
             should be bound and depend on
             the current page. 
             Current version perhaps should be bound too. -->

    <Border Background="White">
        <Frame x:Name="MainFrame" Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}"/>
    </Border>

</Window>
